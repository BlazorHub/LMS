@model DeleteViewModel
@{
    ViewData["Title"] = "删除账号";
}

<div class="delete-page">
    @*<div class="lead">
        <h1>删除</h1>
    </div>*@

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h2>删除账号</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Delete" onsubmit="return confirm('你确定要删除账号吗？');">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="请输入当前密码以验证">
                        </div>

                        <div>
                            <p>@Config.Message.Page.Account.Delete</p>
                        </div>

                        <button class="btn btn-danger" name="button" value="delete">删除</button>
                        <button class="btn btn-secondary" name="button" value="cancel">取消</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
