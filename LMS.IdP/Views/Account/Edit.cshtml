@model EditViewModel
@{
    ViewData["Title"] = "编辑";
}

<div class="edit-page">
    @*<div class="lead">
        <h1>编辑</h1>
    </div>*@

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6 mx-auto">
            <div class="card my-5">
                <div class="card-header">
                    <h2>编辑信息</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Edit">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Id"></label>
                            <input type="text" class="form-control" asp-for="Id" readonly>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input type="text" class="form-control" asp-for="UserName">
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword"></label>
                            <input type="password" class="form-control" asp-for="NewPassword" placeholder="不需修改密码请留空">
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input type="email" class="form-control" asp-for="Email">
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber"></label>
                            <input type="tel" class="form-control" asp-for="PhoneNumber">
                        </div>
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="text" class="form-control" asp-for="Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="RegisterDateTime"></label>
                            <input type="datetime" class="form-control" asp-for="RegisterDateTime" readonly>
                        </div>
                        <hr>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="请输入当前密码以验证">
                        </div>

                        <div>
                            <p>@Config.Message.Page.Account.Edit</p>
                        </div>

                        <button class="btn btn-primary" name="button" value="edit">编辑</button>
                        <button class="btn btn-secondary" name="button" value="cancel">取消</button>
                    </form>
                </div>
            </div>
            
            <p class="text-center my-5">
                <a asp-action="Delete"
                   asp-route-returnUrl="@Url.Action("Edit", new { returnUrl = Context.Request.Query["returnUrl"].ToString() })"
                   class="btn btn-danger" role="button">删除账号</a>
            </p>
        </div>
    </div>
</div>
