@model RegisterViewModel
@{
    ViewData["Title"] = "注册";
}

<div class="register-page">
    @*<div class="lead">
            <h1>注册</h1>
            <p>请选择注册方式</p>
        </div>*@

    <partial name="_ValidationSummary" />

    <div class="row">
        @if (Model.AllowRegister)
        {
            <div class="col-sm-6 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h2>注册</h2>
                    </div>

                    <div class="card-body">
                        <form asp-route="Register">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <div class="form-group">
                                <label asp-for="UserName"></label>
                                <input type="text" class="form-control" asp-for="UserName" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" asp-for="Password">
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input type="email" class="form-control" asp-for="Email">
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber"></label>
                                <input type="tel" class="form-control" asp-for="PhoneNumber">
                            </div>
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input type="text" class="form-control" asp-for="Name">
                            </div>

                            <div>
                                <p>@Config.Message.Page.Account.Register</p>
                            </div>

                            <button class="btn btn-primary" name="button" value="register">注册</button>
                            <button class="btn btn-secondary" name="button" value="cancel">取消</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
